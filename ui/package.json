{
  "name": "metalk8s-platform-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.7.2",
    "@kubernetes/client-node": "github:scality/kubernetes-client-javascript.git#browser-0.10.2-63-g579d066",
    "@scality/core-ui": "github:scality/core-ui.git#v0.10.0",
    "axios": "^0.21.1",
    "formik": "2.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lodash.isempty": "^4.4.0",
    "lodash.sortby": "^4.7.0",
    "polished": "3.4.1",
    "react": "^17.0.1",
    "react-debounce-input": "3.2.2",
    "react-dom": "^17.0.1",
    "react-error-boundary": "^3.1.0",
    "react-intl": "^2.8.0",
    "react-json-view": "1.19.1",
    "react-query": "^3.9.7",
    "react-redux": "^7.1.0",
    "react-router": "^5.1.0",
    "react-router-dom": "^5.1.0",
    "react-scripts": "^3.4.4",
    "react-select": "^3.0.8",
    "react-table": "^7.6.2",
    "react-virtualized": "^9.21.0",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.6",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "reselect": "^2.5.4",
    "styled-components": "^5.0.1",
    "uuid": "3.3.2",
    "vega": "^5.17.3",
    "vega-embed": "^6.0.0",
    "vega-lite": "^4.17.0",
    "yup": "0.26.10"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start:navbar": "docker stop solutions-navbar-dev-server; (docker run --rm -d --name solutions-navbar-dev-server -p 8084:80 $(docker build -q ../solutions-ui-navbar))",
    "start:ui": "react-app-rewired start",
    "start": "npm run start:navbar && npm run start:ui",
    "build": "react-app-rewired --max_old_space_size=2048 build",
    "test": "react-app-rewired test --env=jest-environment-jsdom-sixteen",
    "eject": "react-scripts eject",
    "test:nowatch": "CI=true react-app-rewired test --env=jsdom --reporters=default --reporters=jest-junit",
    "test:integration": "cypress run --spec 'cypress/integration/**/*.spec.js'",
    "test:e2e": "cypress run --spec 'cypress/integration/e2e/**/!(Solutions).feature'",
    "test:e2esolutions": "cypress run --spec 'cypress/integration/e2e/Solutions.feature'",
    "flow": "flow check"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended"
    ],
    "rules": {
      "no-return-assign": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@redux-saga/testing-utils": "^1.0.2",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^3.4.2",
    "babel-eslint": "10.1.0",
    "canvas": "^2.6.1",
    "compression-webpack-plugin": "^6.0.0",
    "customize-cra": "^0.4.1",
    "cypress": "^5.6.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "cypress-wait-until": "^1.7.1",
    "eslint": "6.8.0",
    "flow-bin": "^0.107.0",
    "jest-junit": "^7.0.0",
    "msw": "^0.25.0",
    "react-app-rewired": "^2.1.3",
    "react-test-renderer": "^17.0.1",
    "source-map-explorer": "^2.0.1",
    "oidc-client": "^1.8.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "nonGlobalStepBaseDir": "cypress/integration/e2e",
    "stepDefinitions": "cypress/integration/e2e"
  },
  "jest-junit": {
    "output": "junit/jest-junit.xml",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleNameTemplate": "{classname} {title}"
  },
  "proxy": "http://localhost:8084"
}
