apiVersion: batch/v1
kind: Job
metadata:
  name: kibana-index-provisioning
  labels:
    app: kibana
    heritage: MetalK8s
    component: index-provisioning
spec:
  template:
    metadata:
      name: kibana-index-provisioning
      labels:
        app: kibana
        heritage: MetalK8s
        component: index-provisioning
    spec:
      containers:
        - name: provision-index
          image: appropriate/curl
          command: ['sh', '/scripts/provision-index.sh']
          env:
           - name: INDEX_PATTERN
             valueFrom:
               configMapKeyRef:
                 name: kibana-index-provisioning
                 key: index.pattern
          volumeMounts:
            - name: scripts
              mountPath: /scripts
              readOnly: true
      restartPolicy: OnFailure
      volumes:
        - name: scripts
          configMap:
            name: kibana-index-provisioning
